<page-meta root-font-size="system" />
<view class="page">
  <view class="page__bd">
    <view class="weui-flex">
      <view class="weui-flex__item"><button class="weui-vcode-btn">开始扫描</button></view>
      <view class="weui-flex__item"><button class="weui-vcode-btn">停止扫描</button></view>
    </view>
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">设备列表</view>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text" aria-role="option" wx:for="{{devices}}">
          <text class="weui-media-box__title" id="device{{index}}" capture-bind:tap="selectDevice">{{index}}: {{item.name}}</text>
          <view class="weui-media-box__desc">示例设备</view>
        </view>
      </view>
    </view>
  </view>
</view>